{
  disko.devices = {
    disk = {
      main = {
        type = "disk";

        # IMPORTANT: confirm the internal SSD device name on the installer ISO:
        #   lsblk -o NAME,SIZE,MODEL
        #   ls -l /dev/disk/by-id | grep -i -E 'apple|ssd'
        #
        # Then update this to a stable `/dev/disk/by-id/...` path if possible.
        device = "/dev/sda";

        content = {
          type = "gpt";
          partitions = {
            ESP = {
              size = "512M";
              type = "EF00";
              content = {
                type = "filesystem";
                format = "vfat";
                mountpoint = "/boot";
              };
            };

            swap = {
              size = "8G";
              content = {
                type = "swap";
                resumeDevice = true;
              };
            };

            root = {
              size = "100%";
              content = {
                type = "btrfs";
                extraArgs = [ "-f" ];
                subvolumes = {
                  "@" = {
                    mountpoint = "/";
                    mountOptions = [ "compress=zstd" "noatime" ];
                  };
                  "@home" = {
                    mountpoint = "/home";
                    mountOptions = [ "compress=zstd" "noatime" ];
                  };
                  "@nix" = {
                    mountpoint = "/nix";
                    mountOptions = [ "compress=zstd" "noatime" ];
                  };
                };
              };
            };
          };
        };
      };
    };
  };
}


